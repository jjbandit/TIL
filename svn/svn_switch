#! /bin/bash

. ~/til/bash/confirm

[ $# -eq 0 ] && echo "Please supply a flyspray task number!" && exit 1

svn info > /dev/null 2>&1
[ $? -ne 0 ] && echo "Not a Subversion working copy, exiting." && exit 1

function switchBranch()
{
	echo $(svn info | grep ^URL | awk -F\/ '{print $NF}' | sed 's/FS%20//') > ~/.svn_last_branch.tmp # Cache our current branch

	if [ $1 = "trunk" ]; then
		svn switch "http://svn.excelsystems.com/svn/websmart/websmart/trunk" 2> /dev/null
	else

		if [ $1 = "-" ]; then
			svn_switch $(cat ~/.svn_last_branch.tmp)
		else
			svn switch "http://svn.excelsystems.com/svn/websmart/websmart/branches/FS $1"
		fi
	fi
}

### Main

switchBranch "$1"

if [ $? -ne 0 ]; then

	echo -n "Couldn't switch to the branch, create it instead?"

	Confirm

	if [ $Confirm -eq 0 ]; then
		powershell svn_branch.ps1 "$1"
	else
		echo "Aborting"
		exit 1
	fi

	if [ $? -ne 0 ]; then
		echo "Branch creation failed, something has gone horribly wrong."
		exit 1
	else
		switchBranch "$1"
	fi

fi

# Finally, whatever the result, update the branch we're currently on
svn info | grep "Relative URL" | rev | cut -c -5 | rev > ./.current_branch
